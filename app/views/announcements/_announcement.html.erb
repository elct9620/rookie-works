<div>
  <p>
    <%= link_to "#announcement-#{announcement.id}", data: { toggle: 'collapse' } do %>
      <strong><%= l announcement.published_at.to_date, format: :long %></strong>
      <%= announcement.title %> &nbsp;
      <% if announcement.content.present? %><b class="caret"></b><% end %>
    <% end %>
  </p>
  <div class="collapse" id="announcement-<%= announcement.id %>">
    <%= sanitize announcement.content %>
  </div>
</div>
