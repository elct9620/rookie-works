<div class="card card-plain card-blog">
  <div class="row">
    <div class="col-sm-6">
      <%= link_to experience_path(post), class: 'header' do %>
        <%= image_tag post.thumbnail_url(:thumb) %>
      <% end %>
    </div>
    <div class="col-sm-5 col-md-offset-1">
      <div class="content">
        <h5 class="card-category text-info"><%= l post.published_at.to_date, format: :long %></h5>
        <%= link_to experience_path(post), class: 'card-title' do %>
          <h2><%= post.title %></h2>
        <% end %>
        <p class="text-gray"><%= truncate strip_tags(post.content), length: 150 %></p>
        <%= link_to t('.read_more'),  experience_path(post), class: 'btn btn-danger btn-fill' %>
      </div>
    </div>
  </div>
</div>
